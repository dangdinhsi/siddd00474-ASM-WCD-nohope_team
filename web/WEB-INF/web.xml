<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>AddCrawler</servlet-name>
        <servlet-class>controller.AddCrawler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCrawler</servlet-name>
        <url-pattern>/admin/addcrawler</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddQueue</servlet-name>
        <servlet-class>taskqueue.AddQueue</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQueue</servlet-name>
        <url-pattern>/admin/addqueue</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetQueue</servlet-name>
        <servlet-class>taskqueue.Getqueue</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetQueue</servlet-name>
        <url-pattern>/admin/getqueue</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListArticle</servlet-name>
        <servlet-class>controller.ListArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListArticle</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminList</servlet-name>
        <servlet-class>controller.AdminList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminList</servlet-name>
        <url-pattern>/admin/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminDelete</servlet-name>
        <servlet-class>controller.DeteleArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDelete</servlet-name>
        <url-pattern>/admin/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Article Detail</servlet-name>
        <servlet-class>controller.DetailArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Article Detail</servlet-name>
        <url-pattern>/article/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloAPIs</servlet-name>
        <servlet-class>APIs.HelloAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloAPIs</servlet-name>
        <url-pattern>/helloapi</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddSpecialContent</servlet-name>
        <servlet-class>controller.AddSpecialContent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSpecialContent</servlet-name>
        <url-pattern>/admin/special-content</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveSpecialContent</servlet-name>
        <servlet-class>controller.SaveSpecialContent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveSpecialContent</servlet-name>
        <url-pattern>/admin/save-special-content</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditArticle</servlet-name>
        <servlet-class>controller.EditArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditArticle</servlet-name>
        <url-pattern>/admin/article/edit</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MyRegisterFilter</filter-name>
        <filter-class>filter.MyRegisterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyRegisterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>